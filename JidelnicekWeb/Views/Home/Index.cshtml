@{
    ViewBag.Title = "Restaurace";
}

@model IEnumerable<IRestaurant>

<div class="row">
    @foreach (var Restaurant in Model)
    {
        <div class="col-12 col-md-6 col-xl-4">
            <div class="card border-info m-2">
                <h5 class="card-header">@Restaurant.Name</h5>
                @if (Restaurant.Menu.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var MenuItem in Restaurant.Menu)
                        {
                            <li class="list-group-item">
                                @MenuItem.Name
                                @if (!string.IsNullOrWhiteSpace(MenuItem.Price))
                                {
                                    <span class="badge badge-pill badge-primary">
                                        @MenuItem.Price
                                    </span>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="m-2">Menu nezveřejněno</p>
                }
            </div>
        </div>
    }
</div>
